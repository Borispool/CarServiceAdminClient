<Window x:Class="CarServiceAdminClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизація" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="8" Background="#F4F7F6" BorderBrush="#CCCCCC" BorderThickness="1">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Вхід у систему" FontSize="22" FontWeight="SemiBold" 
                       Foreground="#333333" Margin="0,0,0,25" HorizontalAlignment="Center"/>

            <!-- Форма для вводу -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Логін адміністратора" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,5"/>
                <TextBox x:Name="LoginTextBox" Margin="0,0,0,15"/>

                <TextBlock Text="Пароль" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15"/>
            </StackPanel>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- *** ВИПРАВЛЕННЯ: Додано MinWidth *** -->
                <Button x:Name="LoginButton" Content="Увійти" IsDefault="True" Click="LoginButton_Click" MinWidth="100"/>
                <Button Content="Вихід" IsCancel="True" Click="CancelButton_Click" MinWidth="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>