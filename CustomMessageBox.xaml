<Window x:Class="CarServiceAdminClient.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="" Height="220" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="8" Background="#F4F7F6" BorderBrush="#CCCCCC" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock x:Name="TitleTextBlock" Text="Заголовок" Margin="20,15,20,10"
                       FontSize="16" FontWeight="Bold" Foreground="#333"/>

            <!-- Основний вміст -->
            <Grid Grid.Row="1" VerticalAlignment="Center" Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="IconTextBlock" Text="❓" FontSize="48" Margin="0,0,20,0" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" x:Name="MessageTextBlock" Text="Текст повідомлення тут..."
               TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Left"
               FontSize="14" Foreground="#555"/>
            </Grid>

            <!-- Кнопки -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10,20,20">
                <Button x:Name="OkButton" Content="OK" MinWidth="80" Click="OkButton_Click"/>
                <Button x:Name="YesButton" Content="Так" MinWidth="80" Click="YesButton_Click" Visibility="Collapsed"/>
                <Button x:Name="NoButton" Content="Ні" MinWidth="80" Click="NoButton_Click" Visibility="Collapsed"/>
                <Button x:Name="CancelButton" Content="Скасувати" MinWidth="80" Click="CancelButton_Click" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
